pipeline {
    agent any  // Exécute le pipeline sur n'importe quel agent disponible
    
    environment {
        SONARQUBE = 'SonarQube_Server'  // Nom du serveur SonarQube configuré dans Jenkins (à adapter)
        SONAR_TOKEN = credentials('sonar-token')  // Nom du secret contenant votre token d'authentification SonarQube dans Jenkins (à adapter)
    }

    stages {
        stage('Checkout') {
            steps {
                // Vérification du code source depuis GitHub
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Exemple pour une build Java avec Maven (à adapter à votre technologie)
                    sh 'mvn clean install'  // Remplacez par la commande build de votre projet
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                script {
                    // Exécution de l'analyse SonarQube avec SonarScanner
                    withSonarQubeEnv(SONARQUBE) {
                        sh """
                        sonar-scanner \
                            -Dsonar.projectKey=my_project_key \
                            -Dsonar.projectName=MyProject \
                            -Dsonar.projectVersion=1.0 \
                            -Dsonar.sources=src \
                            -Dsonar.host.url=http://localhost:9000 \
                            -Dsonar.login=${env.SONAR_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    // Attente de l'analyse SonarQube et validation de la Quality Gate
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        always {
            // Actions à effectuer après le pipeline, comme l'archivage des résultats ou l'envoi de notifications
            cleanWs()  // Nettoyage de l'espace de travail
        }
    }
}
